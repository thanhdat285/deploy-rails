<div class="modal fade" id="financial_modal" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content" ng-if="modal.type == 'delete'">
      <div class="modal-header">
        <button type="button" class="close"></button>
        <h4 class="modal-title">Delete financial</h4>
      </div>
      <div class="modal-body">
        <p>
         You will delete this financial. Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal"
          ng-click="delete(modal.financial.id)">
          Yes
        </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">
          No
        </button>
      </div>
    </div>

    <div class="modal-content" ng-if="modal.type == 'edit'">
      <div class="modal-header">
        <button type="button" class="close"></button>
        <h4 class="modal-title">Edit financial</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-4">
            <div class="width-100">Day</div>
            <input type="date" class="form-control"
              ng-model="modal.financial.day">
          </div>
          <div class="col-md-4">
            <div class="width-100">
              Name
            </div>
            <input type="text" class="form-control"
              ng-model="modal.financial.name">
          </div>
          <div class="col-md-4">
            <div class="width-100">
              Money
            </div>
            <input type="number" class="form-control"
              ng-model="modal.financial.money">
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal"
          ng-click="update(modal.financial)">
          OK
        </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>

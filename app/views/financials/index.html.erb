<div ng-app="frozennn" class="container" ng-controller="financial" ng-cloak>
  <div class="row center">
    <h3>Financial management</h3>
  </div>
  <div class="row">
    {{error}}
  </div>
  <div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <td></td>
          <td>Day</td>
          <td>Name</td>
          <td>Money</td>
        </tr>
      </thead>
      <tbody>
        <%= render "financials" %>
        <%= render "sum_financials" %>
        <%= render "new_financial" %>
      </tbody>
    </table>
    <div>
      <div class="pull-right btn btn-success" ng-click="create()">
        Create new financial
      </div>
    </div>
  </div>

  <%= render "modal" %>
</div>

<%= render "financial_app" %>
